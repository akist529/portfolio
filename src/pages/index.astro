---
import Layout from '../layouts/Layout.astro'
import HeaderView from '../views/HeaderView.vue'
import IntroView from '../views/IntroView.vue'
import AboutView from '../views/AboutView.vue'
import FooterView from '../views/FooterView.vue'
---

<Layout title="Alex Kist - Portfolio">
	<HeaderView client:load />
	<div id="content">
		<IntroView />
		<AboutView />
	</div>
	<FooterView />
</Layout>

<style lang="scss">
	#content {
		background: linear-gradient(135deg, #36363655 25%, transparent 25%) -10px 0/ 20px 20px, linear-gradient(225deg, #363636 25%, transparent 25%) -10px 0/ 20px 20px, linear-gradient(315deg, #36363655 25%, transparent 25%) 0px 0/ 20px 20px, linear-gradient(45deg, #363636 25%, #272727 25%) 0px 0/ 20px 20px;
		display: flex;
		flex-direction: column;
	}
</style>